---
import { siteConfig } from "../config";

const currentPath = Astro.url.pathname.replace(/\/$/, "");
const isCompanyPage = currentPath === "/company";
---

<header
  id="header"
  class="fixed top-0 left-0 right-0 z-50 hidden md:block transition-all duration-300"
>
  <nav class="max-w-7xl mx-auto px-8 py-4">
    <ul class="flex items-center gap-8 justify-center">
      {
        isCompanyPage ? (
          <li class="relative">
            <details class="group">
              <summary
                class="cursor-pointer text-gray-700 hover:text-black transition-colors font-medium"
              >
                Company â–¾
              </summary>
              <div
                class="absolute left-1/2 -translate-x-1/2 mt-3 w-48 rounded-lg border border-gray-200 bg-white p-2"
              >
                <a
                  href="#aboutus"
                  class="block rounded-md px-3 py-2 text-sm text-gray-700 hover:text-black transition-colors"
                >
                  About Us
                </a>
                <a
                  href="#services"
                  class="block rounded-md px-3 py-2 text-sm text-gray-700 hover:text-black transition-colors"
                >
                  Services
                </a>
                <a
                  href="#people"
                  class="block rounded-md px-3 py-2 text-sm text-gray-700 hover:text-black transition-colors"
                >
                  People
                </a>
              </div>
            </details>
          </li>
        ) : (
          <li>
            <a
              href="/company"
              class="text-gray-700 hover:text-black transition-colors font-medium"
            >
              Company
            </a>
          </li>
        )
      }

      <li>
        <a
          href="/careers"
          class="text-gray-700 hover:text-black transition-colors font-medium"
        >
          Careers
        </a>
      </li>
    </ul>
  </nav>
</header>

<script>
  window.addEventListener("scroll", () => {
    const header = document.getElementById("header");
    if (window.scrollY > 100) {
      header?.classList.add("bg-white/80", "backdrop-blur-sm");
    } else {
      header?.classList.remove("bg-white/80", "backdrop-blur-sm");
    }
  });
</script>

<style>
  html {
    scroll-behavior: smooth;
  }

  summary {
    list-style: none;
  }

  summary::-webkit-details-marker {
    display: none;
  }
</style>