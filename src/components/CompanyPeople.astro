---
import { siteConfig } from "../config";
import orgChart from "../../res/org-chart.png";
---

<section id="people" class="p-8 sm:p-12 md:p-16 lg:p-24">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2
          class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900"
        >
          People
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        >
        </div>
      </div>

      <div class="lg:col-span-8 space-y-8">
        <figure>
          <img src={orgChart.src} alt="Organization Chart" class="w-full rounded-lg border border-gray-200" />
          <figcaption class="text-center text-sm text-gray-500 mt-2">AutoHealth has three departments: (i) Tech Dept, (ii) Policy & Ethics Dept, (iii) Operation & Comercial Dept </figcaption>
        </figure>
        {
          siteConfig.companyPeople?.length ? (
            <div class="space-y-6">
              {siteConfig.companyPeople.map((person) => (
                <div class="space-y-2">
                  <div>
                    <h3 class="text-xl sm:text-2xl font-bold text-gray-900">
                      {person.name}
                    </h3>
                    {person.title ? (
                      <p class="text-base sm:text-lg md:text-xl leading-relaxed text-gray-600">
                        {person.title}
                      </p>
                    ) : null}
                  </div>

                  {person.bio ? (
                    <p class="text-base sm:text-lg md:text-xl leading-relaxed text-gray-600">
                      {person.bio}
                    </p>
                  ) : null}
                </div>
              ))}
            </div>
          ) : (
            <p class="text-lg sm:text-xl md:text-2xl leading-relaxed text-gray-600">
              Add your team members in <span class="font-semibold text-gray-900">siteConfig.companyPeople</span>.
            </p>
          )
        }
      </div>
    </div>
  </div>
</section>